<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_gry"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_ly"
        android:layout_marginBottom="78dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_inputnumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:clickable="false"
            android:cursorVisible="true"
            android:focusable="true"
            android:fontFamily="sans-serif-medium"
            android:padding="10dp"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text=""
            android:textAlignment="viewEnd"
            android:textColor="@color/white"
            android:textSize="50sp"
            android:verticalScrollbarPosition="right" />

        <EditText
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:clickable="false"
            android:ellipsize="end"
            android:focusable="true"
            android:fontFamily="sans-serif-medium"
            android:padding="10dp"
            android:text=""
            android:textAlignment="viewEnd"
            android:textColor="@color/result"
            android:textSize="25sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <android.widget.Button
                android:id="@+id/clear"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/rippal"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="C"
                android:textColor="@color/blue"
                android:textSize="30sp"
                android:textStyle="bold" />

            <android.widget.Button
                android:id="@+id/btn_7"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/rippal"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="7"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

            <android.widget.Button
                android:id="@+id/btn_4"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/rippal"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

            <android.widget.Button
                android:id="@+id/btn_1"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/rippal"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

            <android.widget.Button
                android:id="@+id/btn_00"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/rippal"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="00"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <android.widget.Button
                android:id="@+id/btn_pr"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/rippal"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="%"
                android:textColor="@color/blue"
                android:textSize="30sp"
                android:textStyle="bold" />

            <android.widget.Button
                android:id="@+id/btn_8"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/rippal"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="8"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

            <android.widget.Button
                android:id="@+id/btn_5"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/rippal"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

            <android.widget.Button
                android:id="@+id/btn_2"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/rippal"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

            <android.widget.Button
                android:id="@+id/btn_0"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/rippal"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <android.widget.Button
                android:id="@+id/btn_Div"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/rippal"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="÷"
                android:textColor="@color/blue"
                android:textSize="30sp"
                android:textStyle="bold" />

            <android.widget.Button
                android:id="@+id/btn_9"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/rippal"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="9"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

            <android.widget.Button
                android:id="@+id/btn_6"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/rippal"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="6"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

            <android.widget.Button
                android:id="@+id/btn_3"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/rippal"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

            <android.widget.Button
                android:id="@+id/btn_dots"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/rippal"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="."
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <android.widget.Button
                android:id="@+id/btn_backspace"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/rippal"
                android:drawableTop="@drawable/ic_baseline_backspace_24"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:paddingTop="25dp"
                android:drawableTint="@color/blue"
                android:textSize="30sp"
                android:textStyle="bold"/>

            <android.widget.Button
                android:id="@+id/btn_mul"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/rippal"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="×"
                android:textColor="@color/blue"
                android:textSize="30sp"
                android:textStyle="bold" />

            <android.widget.Button
                android:id="@+id/btn_sub"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/rippal"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="−"
                android:textColor="@color/blue"
                android:textSize="30sp"
                android:textStyle="bold" />

            <android.widget.Button
                android:id="@+id/btn_add"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/rippal"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="+"
                android:textColor="@color/blue"
                android:textSize="30sp"
                android:textStyle="bold" />

            <android.widget.Button
                android:id="@+id/btn_equel"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/rippal"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:backgroundTint="@color/blue"
                android:text="="
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>