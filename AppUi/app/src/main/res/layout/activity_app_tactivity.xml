<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activtiy.App_T_Activity">
    <LinearLayout
        android:background="@drawable/bg_s_gradiant"
        android:orientation="vertical"

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="@drawable/background_app_f_activity"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:padding="25dp"
            android:orientation="vertical">
            <TextView
                android:text="Wel-Come !!"
                android:textColor="@color/blue"
                android:textSize="40dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="Sign in and get Started "
                android:textColor="@color/black_2"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:padding="25dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <EditText
                android:background="@drawable/button_color"
                android:layout_marginTop="20dp"
                android:hint="Email "
                android:textColorHint="@color/black_2"
                android:textSize="19dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:background="@drawable/button_color"
                android:layout_marginTop="20dp"
                android:hint="Password "
                android:textColorHint="@color/black_2"
                android:textSize="19dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btn_signin"
                android:text="SignIn"
                android:textSize="15dp"
                android:textStyle="bold"
                android:backgroundTint="@color/blue"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:text="Forgot Password??"
                android:textSize="15dp"
                android:textStyle="bold"
               style="@style/Widget.MaterialComponents.Button.TextButton"
                android:textColor="@color/blue"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <ProgressBar
                android:layout_gravity="center"
                android:visibility="gone"
                android:id="@+id/prog_circal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5">
            <LinearLayout
                android:gravity="top"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                     android:layout_marginLeft="70dp"
                    android:src="@drawable/gogle"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
                <ImageView

                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/facbok"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
                <ImageView
                    android:layout_marginRight="60dp"
                    android:layout_gravity="right"
                    android:src="@drawable/twiter"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>

            </LinearLayout>

            <Button
                android:layout_marginTop="10dp"
                android:id="@+id/btn_signup"
                android:text="Signup"
                android:textSize="15dp"
                android:textStyle="bold"
                android:backgroundTint="@color/blue"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>