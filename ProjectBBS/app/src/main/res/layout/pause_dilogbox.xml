<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/PauseDilog"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/baseBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/base1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/innerBox"
            android:padding="12dp"
            android:layout_width="wrap_content"
            android:layout_height="260dp"
            android:src="@drawable/innderbox2"
            android:layout_marginBottom="80dp"
            app:layout_constraintBottom_toBottomOf="@id/baseBox"
            app:layout_constraintEnd_toEndOf="@id/baseBox"
            app:layout_constraintStart_toStartOf="@id/baseBox"
            app:layout_constraintTop_toTopOf="@id/baseBox" />

        <TextView
            android:id="@+id/pause"
            android:layout_width="138dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="-25dp"
            android:layout_marginBottom="290dp"
            android:background="@drawable/btnblue"
            android:gravity="center"
            android:padding="0dp"
            android:text="Pause"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/baseBox"
            app:layout_constraintStart_toStartOf="@id/baseBox"
            app:layout_constraintTop_toTopOf="@id/baseBox" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/close"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="-15dp"
            android:layout_marginEnd="-15dp"
            android:padding="5dp"
            android:src="@drawable/close"
            app:layout_constraintTop_toTopOf="@id/baseBox"
            app:layout_constraintEnd_toEndOf="@id/baseBox"/>

