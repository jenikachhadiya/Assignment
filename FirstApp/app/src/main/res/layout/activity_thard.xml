<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/white"
    tools:context=".ThardActivity">


  <EditText

      android:layout_width="wrap_content"
      android:layout_height="wrap_content"

      android:text="Sign up"
      android:padding="20dp"
      android:layout_gravity="top"

      android:textSize="30dp"
      android:textStyle="bold" />

  <EditText
      android:id="@+id/et_EmailA"

      android:hint="Email Address "
      android:padding="10dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"/>

  <EditText
      android:id="@+id/et_Pass"
      android:hint="Password "
      android:padding="10dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"/>

  <Button
      android:id="@+id/btn_Continue"
    android:text="Continue"
    android:textSize="20dp"
    android:padding="10dp"
    android:backgroundTint="@color/Butten"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"/>
  <EditText
    android:hint="Or Cannect With Social Media"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>
  <Button
      android:text="Sign With Twitter"
      android:textSize="15dp"
      android:backgroundTint="@color/Twitter"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"/>
  <Button
      android:text="Sign With Facebook"
      android:textSize="15dp"
      android:padding="10dp"
      android:backgroundTint="@color/facebook"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"/>



</LinearLayout>