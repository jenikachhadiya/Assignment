<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_centerInParent="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_tital"
        android:textColor="@color/blue"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:text="Businnesss Planing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_des"
        android:textSize="10dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="4dp"
        android:text="More and More third World Science and technology Planing and education people are heading for more prospore countines seelings higers wagerts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/img_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/onboding2" />


</FrameLayout>